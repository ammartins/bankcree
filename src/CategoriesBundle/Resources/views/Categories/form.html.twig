    {% include '::errors.html.twig' with {'errors': form.savings.vars.errors} %}
    {{ form_widget(form.savings, { 'attr': {'class': 'form-control'} }) }}
</div>

<div class="text-right">
  {{ form_widget(form.save, { 'attr': {'class': 'btn btn-success'}}) }}
